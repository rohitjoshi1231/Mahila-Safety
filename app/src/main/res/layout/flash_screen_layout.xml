<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727"
    tools:context=".fragments.HomeFragment">

    <ImageView
        android:id="@+id/imgWomen"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/img_women" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@id/imgWomen"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="@string/women_s_safety_at_hand"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imgWomen2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/imgWomen"
        android:layout_toEndOf="@id/imgWomen"
        android:src="@drawable/img_women_3" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgWomen"
        android:layout_marginTop="70dp"
        android:layout_toStartOf="@id/imgWomen2"
        android:fontFamily="monospace"
        android:padding="10dp"
        android:text="@string/swipe_for_assured_security"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgWomen2">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:src="@drawable/swipe_right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:padding="10dp"
            android:text="Swipe up to make a emergency call"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>