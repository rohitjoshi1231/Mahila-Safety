<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="app_background">#252729</color>
    <color name="subtext">#BBB5AE</color>
    <color name="secondaryColor">#969696</color>

    <style name="BottomNavIconStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <!-- Customize the size of the icon -->
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <!-- Add margin top to the icon -->
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Customize the background color of the dialog -->
        <item name="android:background">#272727</item>
        <item name="android:radius">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <!-- Customize the text color of the dialog -->
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@drawable/custom_dialog_background</item>
        <!-- Add more customizations as needed -->
    </style>

</resources>